{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build Project",
            "dependsOn": ["Build Main", "Build Inputlib", "Build Matchlib"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
		},
		{
            "type": "shell",
            "label": "Build Main",
            "command": "/usr/bin/g++",
            "args": [
				"Dinoai.cpp",

				"Inputlib/Inputlib.o",
				"-I /Inputlib",

				"Matchlib/Matchlib.o",
				"-I /Matchlib.o",

				"-g",
                "-o",
				"${workspaceFolder}/Dinoai/Dinoai.out",

				// following three lines will be removed later
				"-lX11",
				"-lXtst",
				"`pkg-config", "--cflags", "--libs", "opencv4`"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Dinoai"
            }
        },
		{
            "type": "shell",
            "label": "Build Inputlib",
            "command": "/usr/bin/g++",
            "args": [
				"Inputlib.cpp",
				"-c",
				"-g",
				"-o",
                "${workspaceFolder}/Dinoai/Inputlib/Inputlib.o",
                "-lX11",
                "-lXtst"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Dinoai/Inputlib"
            }
		},
		{
            "type": "shell",
            "label": "Build Matchlib",
            "command": "/usr/bin/g++",
            "args": [
				"Matchlib.cpp",
				"-c",
				"-g",
				"-o",
                "${workspaceFolder}/Dinoai/Matchlib/Matchlib.o",
                "`pkg-config", "--cflags", "--libs", "opencv4`"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Dinoai/Matchlib"
            }
		}
	]
}